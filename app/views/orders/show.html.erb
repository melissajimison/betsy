<div class="panel panel-warning">
  <div class="panel-body">
    <h2> Buyer Detail Form: For Order: #<%= @order.id %> </h2>
    <div class="ordershow">
    <p>Name: <%= @order.card_name %></p>
    <p>Email: <%= @order.email %></p>
    <p>Address: <%= "#{@order.address}, #{@order.city}, #{@order.state}, #{@order.zip}" %></p>
    <p>Credit card: <%= @order.to_s.slice(-4..-1).to_i %></p>

    <h3>Order Details</h3>
    <% @order.order_items.each do |order_item| %>
      <p>Name: <%=order_item.product.name %>
        <p>Quantity Ordered: <%= order_item.quantity %></p>
    <% end %>
    </div>

    <div class="ordershow">
      <%first_overnight = @response["fedex"][0]%>
     <%=  first_overnight['ServiceType']%>
     <%=  first_overnight_rates=first_overnight['RatedShipmentDetails'].first["ShipmentRateDetail"]['TotalNetChargeWithDutiesAndTaxes'] %>
     <br>
      <% two_day = @response["fedex"][4]%>
     <%=  two_day_name = two_day['ServiceType']%>
     <%= two_day_rates = two_day['RatedShipmentDetails'].first["ShipmentRateDetail"]['TotalNetChargeWithDutiesAndTaxes'] %>
      <br>
      <% ground= @response["fedex"][7]%>
      <%= ground_name = ground['ServiceType']%>
     <%=  ground_rates = ground['RatedShipmentDetails']['ShipmentRateDetail']["TotalNetChargeWithDutiesAndTaxes"] %>
     <br>
      <br>

      <%= form_tag do %>

          <%= radio_button_tag(:age, "adult") %>
          <%= label_tag(:fedex_first_overnight, "Fedex First Overnight®: #{first_overnight_rates["Amount"]} #{first_overnight_rates["Currency"]}") %>
          <br>
          <br>
            <%= radio_button_tag(:age, "child") %>
            <%= label_tag(:fedex_2day, "FedEx 2Day®  #{two_day_rates["Amount"]} #{two_day_rates["Currency"]}") %>
            <br><br>
            <%= radio_button_tag(:age, "child") %>
            <%= label_tag(:fedex_ground, "FedEx Ground® : #{ground_rates["Amount"]} #{ground_rates["Currency"]}") %>

            <%= submit_tag "Go" %>

      <% end %>


    <%= button_to "Confirm Purchase", confirmation_path, method: :get,
      :onclick => "return confirm('Are you sure you want to purchase?')" %> <br/> <br/>

    <%= button_to "Edit Purchase", cart_path, method: :get %><br/><br/>
  </div>
  </div>
  <%=@response%>
</div>
